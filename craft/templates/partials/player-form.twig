{% if existingEntry %}
<div class="msg success">
  Je hebt je al ingeschreven voor deze wedstrijd. {% if existingEntry.url is
  defined %}
  <a
    href="{{ existingEntry.url }}"
    class="btn btn-primary"
    style="margin-left: 8px"
    >Bekijken</a
  >
  {% endif %}
</div>
{% else %}
<form method="post" accept-charset="UTF-8">
  {{ csrfInput() }}
  {{ actionInput("entries/save-entry") }}
  {{
    hiddenInput(
      "sectionId",
      craft.app.sections.getSectionByHandle("availability").id
    )
  }}
  {{
    hiddenInput(
      "typeId",
      craft.app.sections.getSectionByHandle("availability").getEntryTypes()[0]
        .id
    )
  }}

  {# Relate to match + player #}
  {{ hiddenInput("fields[match][]", match.id) }}
  {{ hiddenInput("fields[player][]", currentUser.id) }}

  {# Example extra fields (status/rank/note) â€” adapt to your handles #}
  <label for="status">Status</label>
  <select id="status" name="fields[status]">
    <option value="aanwezig">Aanwezig</option>
    <option value="afwezig">Afwezig</option>
    <option value="twijfel">Twijfel</option>
  </select>

  <div class="form-actions">
    <button type="submit">Inschrijven</button>
  </div>
</form>
{% endif %}
