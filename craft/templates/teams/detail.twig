{% set slug = craft.app.request.getSegment(2) %} {% set match =
craft.entries().section(['ploegA', 'ploegB', 'ploegC']).slug(slug).one() %} {%
if match %} {% set availabilityEntries = craft.entries()
.section('availability') .relatedTo({ field: 'match', targetElement: match.id })
.all() %} {% set existingEntry = craft.entries() .section('availability')
.relatedTo({ and: [ { field: 'match', targetElement: match.id }, { field:
'player', targetElement: currentUser.id } ] }) .one() %} {% endif %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ match ? match.title : "Geen Wedstrijd Gevonden" }}</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="{{ siteUrl('uploads/favicon_io/favicon.ico') }}"
    />

    <style>
      body {
        font-family: Arial, sans-serif;
        background: linear-gradient(
          to right,
          rgb(169, 197, 185),
          rgb(119, 188, 158)
        );
        margin: 0;
        padding: 0;
      }

      main {
        padding: 20px;
        margin-bottom: 4rem;
        margin-left: 250px; /* Adjust based on your nav width */
      }

      .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
      }

      .terug-button {
        background-color: #28a745;
        color: white;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
      }

      .terug-button:hover {
        background-color: #218838;
      }

      .availability-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-top: 30px;
      }

      .left-card,
      .right-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .success-message,
      .error-message {
        text-align: center;
        font-weight: bold;
        margin-top: 15px;
      }

      .admin-form {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
      }

      .admin-form label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }

      .admin-form select,
      .admin-form input[type="text"],
      .admin-form input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      .admin-form button {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
      }

      .admin-form button:hover {
        background-color: #0056b3;
      }
      #availability-form {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 8px;
      }

      #availability-form label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
      }

      #availability-form select,
      #availability-form input[type="text"],
      #availability-form input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      #availability-form button {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
      }

      #availability-form button:hover {
        background-color: #218838;
      }
      .availability-list {
        list-style: none;
        padding: 0;
        margin-top: 20px;
      }

      .availability-item {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .availability-item:last-child {
        border-bottom: none;
      }

      .availability-item .label {
        font-weight: bold;
        margin-right: 10px;
        color: #007bff;
      }

      .admin-status-form label {
        font-weight: bold;
      }

      .admin-status-form select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      .admin-status-form button {
        align-self: flex-start;
        background-color: #007bff;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
      }

      .admin-status-form button:hover {
        background-color: #0056b3;
      }

      .success-message {
        color: green;
      }

      .error-message {
        color: red;
      }

      .no-data {
        text-align: center;
        font-size: 16px;
        color: #555;
      }
    </style>
  </head>

  <body>
    {% include 'global/nav.twig' %}

    <main>
      <div class="header-section">
        <a href="javascript:history.back()" class="terug-button">Terug</a>
      </div>

      {% if match %}
      <h1>{{ match.title }}</h1>
      <div class="availability-grid">
        <div class="left-card">
          {% if currentUser and currentUser.admin %} {% include
          'partials/admin-form.twig' with { match: match } %} {% elseif
          currentUser %} {% include 'partials/player-form.twig' with { match:
          match, existingEntry: existingEntry } %} {% endif %}
        </div>

        <div class="right-card">
          {% include 'partials/player-list.twig' with { entries:
          availabilityEntries } %}
        </div>
      </div>
      <div id="message-container"></div>
      {% else %}
      <p class="no-data">De wedstrijd is niet gevonden.</p>
      {% endif %}
    </main>

    {% include 'global/footer.twig' %}
    <script src="{{ siteUrl('assets/js/detail.js') }}"></script>
  </body>
</html>
