set availabilityEntries = craft.entries() .section('availability') .relatedTo({
field: 'match', targetElement: match.id }) .siteId(currentSite.id)
.with(['player']) .all() %} {% set existingEntry = currentUser ? craft.entries()
.section('availability') .relatedTo({ and: [ { field: 'match', targetElement:
match.id }, { field: 'player', targetElement: currentUser.id } ] })
.siteId(currentSite.id) .status(null) .one() : null %} {% endif %}

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ match ? match.title : "Geen Wedstrijd Gevonden" }}</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="{{ siteUrl('uploads/favicon/favicon.ico') }}"
    />

    <style>
      :root {
        --cream: #fdfaf6;
        --soft-red: #d9534f;
        --soft-red-dark: #b52e2a;
        --text: #333;
        --muted: #6b6b6b;
        --card: #ffffff;
        --ring: #e9e9e9;
        --shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
        --tint: #fff7f5;
        --purple-700: #5e548e;
        --bg-gradient-start: #fffaf6;
        --bg-gradient-end: #f4e7e3;
      }

      html {
        background-color: var(--bg-gradient-start);
      }
      body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        font-family: Arial, sans-serif;
        color: var(--text);
        background: radial-gradient(
            1200px 700px at 110% -10%,
            color-mix(in oklab, var(--purple-700) 14%, transparent),
            transparent 60%
          ),
          linear-gradient(
            160deg,
            var(--bg-gradient-start),
            var(--bg-gradient-end)
          );
        position: relative;
        overflow-x: hidden;
      }
      body::before {
        content: "";
        position: fixed;
        inset: -10% -5% auto -5%;
        height: 140%;
        z-index: 1;
        background: url("data:image/svg+xml,%3Csvg width='800' height='600' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 100 Q400 200 800 100 T1600 100 V600 H0 Z' fill='%235e548e' opacity='0.06'/%3E%3C/svg%3E")
          repeat-x / cover;
        animation: floatBg 24s linear infinite;
        pointer-events: none;
      }
      @keyframes floatBg {
        to {
          transform: translateX(-50%);
        }
      }

      main {
        margin-left: 200px;
        padding: 2rem;
        flex: 1;
        z-index: 1;
      }

      .top-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        margin-bottom: 8px;
      }
      .btn {
        appearance: none;
        border: 2px solid var(--soft-red);
        margin: 1rem;
        background: #fff;
        color: var(--soft-red);
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 700;
        text-decoration: none;
        transition: background 0.15s, color 0.15s, border-color 0.15s,
          transform 0.1s;
      }
      .btn:hover {
        background: var(--soft-red);
        color: var(--cream);
        transform: translateY(-1px);
      }
      .btn-primary {
        background: var(--soft-red);
        color: var(--cream);
        border-color: var(--soft-red);
      }
      .btn-primary:hover {
        background: var(--soft-red-dark);
        border-color: var(--soft-red-dark);
      }

      h1 {
        margin: 6px 0 4px;
        text-align: center;
        font-size: 26px;
        font-weight: 800;
        color: var(--soft-red-dark);
      }
      .meta-line {
        text-align: center;
        color: var(--muted);
        margin: 0 0 16px;
      }

      .grid {
        display: grid;
        grid-template-columns: minmax(320px, 1fr) minmax(320px, 420px);
        gap: 1.25rem;
        align-items: start;
        margin-left: 1rem;
      }

      .panel {
        background: var(--card);
        border: 1px solid var(--ring);
        border-radius: 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
      }
      .panel-header {
        padding: 12px 16px;
        background: var(--tint);
        border-bottom: 1px solid var(--ring);
        color: var(--soft-red-dark);
        font-weight: 800;
      }
      .panel-body {
        padding: 14px 16px;
      }

      .panel-body form {
        max-width: 640px;
      }
      .panel-body label {
        display: block;
        margin: 10px 0 6px;
        font-weight: 700;
        color: var(--text);
      }
      .panel-body input[type="text"],
      .panel-body input[type="number"],
      .panel-body input[type="datetime-local"],
      .panel-body select,
      .panel-body textarea {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid var(--ring);
        border-radius: 10px;
        background: #fff;
      }
      .form-actions {
        margin-top: 12px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .panel-body button,
      .panel-body input[type="submit"] {
        appearance: none;
        border: 2px solid var(--soft-red);
        background: var(--soft-red);
        color: var(--cream);
        padding: 10px 14px;
        border-radius: 10px;
        font-weight: 800;
        cursor: pointer;
        transition: background 0.15s, border-color 0.15s, transform 0.1s;
      }
      .panel-body button:hover,
      .panel-body input[type="submit"]:hover {
        background: var(--soft-red-dark);
        border-color: var(--soft-red-dark);
        transform: translateY(-1px);
      }

      .availability-list {
        list-style: none;
        margin-left: 1rem;
        padding: 0;
      }
      .availability-item {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 10px;
        align-items: center;
        padding: 10px 12px;
        border-bottom: 1px solid var(--ring);
        background: #fff;
      }
      .availability-item:last-child {
        border-bottom: none;
      }
      .player-name {
        font-weight: 700;
        color: var(--soft-red-dark);
      }
      .sub {
        color: var(--muted);
        font-size: 0.92rem;
      }
      .chip {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.85rem;
        border: 1px solid rgba(181, 46, 42, 0.25);
        background: #fde3e2;
        color: var(--soft-red-dark);
      }

      #message-container {
        margin-top: 12px;
      }
      .msg {
        padding: 10px 14px;
        border-radius: 10px;
        border: 1px solid;
        margin: 8px 0;
      }
      .msg.success {
        background: #ecfdf5;
        border-color: #10b981;
        color: #065f46;
      }
      .msg.error {
        background: #fef2f2;
        border-color: #ef4444;
        color: #991b1b;
      }

      .no-data {
        text-align: center;
        font-size: 16px;
        color: var(--muted);
      }

      @media (max-width: 980px) {
        .grid {
          grid-template-columns: 1fr;
        }
      }
      @media (max-width: 700px) {
        main {
          padding: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    {% include 'global/nav.twig' %}

    <main>
      {% include 'global/header.twig' %}

      <div class="top-actions">
        <a href="javascript:history.back()" class="btn">Terug</a>
        {# Optional CP link: {% if match %}
        <a
          href="{{ url('admin/entries/' ~ match.section.handle ~ '/' ~ match.id ~ '-' ~ match.slug) }}"
          class="btn"
          target="_blank"
          rel="noopener noreferrer"
          >Open in CP</a
        >
        {% endif %} #}
      </div>

      {% if match %}
      <h1>{{ match.title }}</h1>
      <p class="meta-line">
        {% set dt = (match.dateTime is defined and match.dateTime) ?
        match.dateTime|date('d-m-Y H:i') : 'â€”' %}
        <span
          >Datum & tijd: <strong>{{ dt }}</strong></span
        >
        {% set loc = match.address ?? match.location ?? '' %} {% if loc
        %}&middot;
        <span
          >Locatie: <strong>{{ loc }}</strong></span
        >{% endif %}
      </p>

      <div class="grid">
        <!-- LEFT: admin/player form -->
        <section class="panel">
          <div class="panel-header">
            {% if currentUser and currentUser.admin %} Beheer wedstrijd {%
            elseif currentUser %} Jouw beschikbaarheid {% else %} Informatie {%
            endif %}
          </div>
          <div class="panel-body">
            {% if currentUser and currentUser.admin %} {% include
            'partials/admin-form.twig' with { match: match } %} {% elseif
            currentUser %} {% include 'partials/player-form.twig' with { match:
            match, existingEntry: existingEntry } %} {% else %}
            <p class="no-data">Log in om je beschikbaarheid door te geven.</p>
            {% endif %}
          </div>
        </section>

        <!-- RIGHT: player list -->
        <aside class="panel">
          <div class="panel-header">Spelers & status</div>
          <div class="panel-body">
            {% include 'partials/player-list.twig' with { entries:
            availabilityEntries } %}
          </div>
        </aside>
      </div>

      <div id="message-container"></div>
      {% else %}
      <p class="no-data">De wedstrijd is niet gevonden.</p>
      {% endif %}
    </main>

    {% include 'global/footer.twig' %}
    <script src="{{ siteUrl('assets/js/detail.js') }}"></script>
  </body>
</html>
