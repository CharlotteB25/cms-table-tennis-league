<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HNO Dashboard</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="{{ siteUrl('uploads/favicon_io/favicon.ico') }}"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        background: linear-gradient(
          to right,
          rgb(169, 197, 185),
          rgb(119, 188, 158)
        );
        margin: 0;
        padding: 0;
        display: flex;
      }

      main {
        margin-left: 200px;
        padding: 2rem;
        flex: 1;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #007bff;
        color: white;
        padding: 1rem;
      }

      header h1 {
        margin: 0;
      }

      .cards-container {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 2rem;
      }

      .card {
        background: white;
        width: 250px;
        height: 150px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 1rem;
        cursor: pointer;
        transition: transform 0.2s;
      }

      .card:hover {
        transform: scale(1.05);
      }

      .card h2 {
        margin: 0;
        font-size: 18px;
        color: rgb(41, 136, 96);
      }
    </style>
  </head>
  <body>
    {% include 'global/nav.twig' %}

    <main>
      <header>
        <h1>Welkom, {{ currentUser.friendlyName ?? "Gast" }}</h1>
      </header>

      <div class="cards-container">
        {% if currentUser %} {% if currentUser.admin %}
        <div
          class="card"
          onclick="window.location.href='{{ url('drinks/admin') }}'"
        >
          <h2>Beheer Drankjes</h2>
        </div>
        <div
          class="card"
          onclick="window.location.href='{{ url('teams/admin') }}'"
        >
          <h2>Beheer Planning</h2>
        </div>
        <div
          class="card"
          onclick="window.location.href='{{ url('tabs/admin') }}'"
        >
          <h2>Beheer Rekeningen</h2>
        </div>
        {% else %}
        <div class="card" onclick="window.location.href='{{ url('drinks') }}'">
          <h2>Bestel Drankjes</h2>
        </div>
        <div
          class="card"
          onclick="window.location.href='{{ url('teams/admin') }}'"
        >
          <h2>Speeldata</h2>
        </div>
        <div class="card" onclick="window.location.href='{{ url('tabs') }}'">
          <h2>Rekeningen</h2>
        </div>
        {% endif %} {% else %}
        <div class="card" onclick="window.location.href='{{ url('login') }}'">
          <h2>Login</h2>
        </div>
        {% endif %}
      </div>
    </main>

    {% include 'global/footer.twig' %}
  </body>
</html>
