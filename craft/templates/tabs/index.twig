{% set actionTrigger = craft.app.config.general.actionTrigger ?? 'actions' %} {%
set user = currentUser %}

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mijn Tabs</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="{{ siteUrl('uploads/favicon_io/favicon.ico') }}"
    />

    <style>
      :root {
        --cream: #fdfaf6;
        --soft-red: #d9534f;
        --soft-red-dark: #b52e2a;
        --text: #333;
        --muted: #6b6b6b;
        --card: #ffffff;
        --ring: #e9e9e9;
        --shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
        --tint: #fff7f5;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        font-family: Arial, sans-serif;
        color: var(--text);
        background: var(--cream);
      }
      main {
        margin-left: 200px;
        padding: 2rem;
        flex: 1;
      }

      .page-title {
        margin: 0 0 12px;
        font-size: 26px;
        font-weight: 800;
        color: var(--soft-red-dark);
        text-align: center;
      }
      .sub {
        color: var(--muted);
        text-align: center;
        margin: 0 0 18px;
      }

      .panel {
        background: var(--card);
        border: 1px solid var(--ring);
        border-radius: 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
        margin: 0 auto;
        max-width: 1100px;
      }
      .panel-header {
        padding: 12px 16px;
        background: var(--tint);
        border-bottom: 1px solid var(--ring);
        color: var(--soft-red-dark);
        font-weight: 800;
      }
      .panel-body {
        padding: 12px 16px;
      }

      .table-wrap {
        overflow: auto;
        border-radius: 12px;
      }
      table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        min-width: 720px;
      }
      thead th {
        position: sticky;
        top: 0;
        background: var(--tint);
        color: var(--soft-red-dark);
        text-align: left;
        font-weight: 800;
        padding: 12px 14px;
        border-bottom: 1px solid var(--ring);
      }
      tbody td {
        padding: 12px 14px;
        border-bottom: 1px solid var(--ring);
        vertical-align: top;
      }
      tbody tr:nth-child(odd) {
        background: #fff;
      }
      tbody tr:nth-child(even) {
        background: #fefefe;
      }
      tbody tr:hover {
        background: var(--tint);
      }

      .items-list {
        margin: 0;
        padding-left: 18px;
      }
      .total {
        font-weight: 800;
        white-space: nowrap;
        color: var(--soft-red-dark);
      }

      .chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 800;
        border: 1px solid var(--ring);
      }
      .chip-open {
        background: #fde3e2;
        color: var(--soft-red-dark);
        border-color: rgba(181, 46, 42, 0.25);
      }
      .chip-paid {
        background: #f3f4f6;
        color: #374151;
        border-color: #e5e7eb;
      }

      .actions {
        display: flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
      }
      .btn {
        appearance: none;
        border: 2px solid var(--soft-red);
        background: #fff;
        color: var(--soft-red);
        padding: 9px 12px;
        border-radius: 10px;
        font-weight: 800;
        cursor: pointer;
        transition: background 0.15s ease, color 0.15s ease,
          border-color 0.15s ease, transform 0.1s ease;
        text-decoration: none;
      }
      .btn:hover {
        background: var(--soft-red);
        color: var(--cream);
        transform: translateY(-1px);
      }
      .btn-primary {
        background: var(--soft-red);
        color: var(--cream);
        border-color: var(--soft-red);
      }
      .btn-primary:hover {
        background: var(--soft-red-dark);
        border-color: var(--soft-red-dark);
      }

      .empty {
        text-align: center;
        color: var(--muted);
        border: 1px dashed var(--ring);
        padding: 20px;
        border-radius: 12px;
        max-width: 800px;
        margin: 0 auto;
      }

      /* Responsive stack */
      @media (max-width: 760px) {
        main {
          padding: 1.25rem;
        }
        table {
          min-width: 0;
        }
        thead {
          display: none;
        }
        tbody tr {
          display: block;
          border: 1px solid var(--ring);
          border-radius: 12px;
          margin-bottom: 12px;
          overflow: hidden;
        }
        tbody td {
          display: flex;
          justify-content: space-between;
          gap: 12px;
          border-bottom: 1px dashed var(--ring);
        }
        tbody td:last-child {
          border-bottom: none;
        }
        tbody td::before {
          content: attr(data-label);
          font-weight: 700;
          color: var(--soft-red-dark);
        }
        .actions {
          justify-content: flex-start;
        }
      }

      /* Pay modal */
      #pay-modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1000;
      }
      #pay-modal .modal {
        max-width: 420px;
        margin: 10vh auto;
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid var(--ring);
        box-shadow: var(--shadow);
      }
      #pay-modal h3 {
        margin: 0 0 8px;
        color: var(--soft-red-dark);
      }
      #pay-modal p {
        color: var(--muted);
      }
    </style>
  </head>
  <body>
    {% include 'global/nav.twig' %}

    <main>
      {% include 'global/header.twig' %} {% if not user %}
      <div class="panel">
        <div class="panel-body empty">
          Je moet ingelogd zijn om je tabs te bekijken.
        </div>
      </div>
      {% else %}
      <h1 class="page-title">Mijn Tabs</h1>
      <p class="sub">Bekijk je openstaande en recente tabs.</p>

      {% set myTabs =
      craft.entries.section('tabs').tabOwner(user).with(['items.drink']).orderBy('postDate
      desc').all() %} {% if myTabs|length %}
      <section class="panel">
        <div class="panel-header">Overzicht</div>
        <div class="panel-body table-wrap">
          <table>
            <thead>
              <tr>
                <th style="width: 120px">Status</th>
                <th>Items</th>
                <th style="width: 140px">Totaal</th>
                <th style="width: 220px; text-align: right">Acties</th>
              </tr>
            </thead>
            <tbody>
              {% for tab in myTabs %} {% set total = 0 %}
              <tr data-tab-id="{{ tab.id }}">
                <td data-label="Status">
                  {% set status = (tab.tabStatus ?? '—')|lower %} {% if status
                  == 'open' %}
                  <span class="chip chip-open">Open</span>
                  {% elseif status == 'paid' %}
                  <span class="chip chip-paid">Betaald</span>
                  {% else %}
                  <span class="chip">{{ tab.tabStatus ?? "—" }}</span>
                  {% endif %} {# hidden marker for polling this tab’s status #}
                  <span
                    class="js-tab-status"
                    data-tab-id="{{ tab.id }}"
                    data-status="{{ tab.tabStatus ?? 'open' }}"
                    style="display: none"
                  ></span>
                </td>

                <td data-label="Items">
                  <ul class="items-list">
                    {% for b in tab.items.all() %} {% set qty = b.qty ?? 0 %} {%
                    set priceMoney = (b.price is defined and
                    attribute(b.price,'getAmount') is defined) ? b.price :
                    (b.drink.one() and b.drink.one().price is defined and
                    attribute(b.drink.one().price,'getAmount') is defined ?
                    b.drink.one().price : null) %} {% set priceNumber =
                    priceMoney ? (priceMoney.getAmount() / 100) : (b.price ??
                    0)|float %} {% set line = qty * priceNumber %} {% set total
                    = total + line %}
                    <li>
                      {{ b.title ?: (b.drink.one() ? b.drink.one().title : '—') }}
                      × {{ qty }} —
                      {{ craft.app.formatter.asCurrency(priceNumber, "EUR") }}
                    </li>
                    {% endfor %}
                  </ul>
                </td>

                <td data-label="Totaal" class="total">
                  {{ craft.app.formatter.asCurrency(total, "EUR") }}
                </td>

                <td data-label="Acties" style="text-align: right">
                  {% if (tab.tabStatus ?? null) == 'open' %}
                  <div class="actions">
                    <form method="post" action="/tab/close">
                      {{ csrfInput() }}
                      <input type="hidden" name="tabId" value="{{ tab.id }}" />
                      <button type="submit" class="btn">Cash</button>
                    </form>

                    <button
                      type="button"
                      class="btn btn-primary"
                      data-online-pay="{{ tab.id }}"
                    >
                      Online betalen
                    </button>
                  </div>
                  {% else %} — {% endif %}
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </section>
      {% else %}
      <div class="panel">
        <div class="panel-body empty">Je hebt nog geen tabs.</div>
      </div>
      {% endif %} {% endif %}
    </main>

    {% include 'global/footer.twig' %} {# Pay modal (one-time) #}
    <div id="pay-modal">
      <div class="modal">
        <h3>Scan & betaal</h3>
        <div id="qr" style="margin: 12px auto"></div>
        <p>
          <a
            id="open-checkout"
            class="btn btn-primary"
            target="_blank"
            rel="noopener"
            >Open betaalscherm</a
          >
        </p>
        <p>Na betaling sluiten we je tab automatisch.</p>
        <button
          type="button"
          class="btn"
          onclick="document.getElementById('pay-modal').style.display='none'"
        >
          Sluiten
        </button>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"
      defer
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Make sure any Cash forms post to current origin (ngrok/local)
        const CLOSE_URL = window.location.origin + "/tab/close";
        document.querySelectorAll('form[action="/tab/close"]').forEach((f) => {
          f.action = CLOSE_URL;
        });

        async function startOnlinePay(tabId) {
          // Use your existing relative route
          const PAY_URL = window.location.origin + "/tab/pay";

          const res = await fetch(PAY_URL, {
            method: "POST",
            headers: {
              "Content-Type": "application/x-www-form-urlencoded",
              "X-CSRF-Token": "{{ craft.app.request.csrfToken }}",
            },
            body: new URLSearchParams({ tabId }),
          });

          let data;
          try {
            data = await res.json();
          } catch (e) {}
          if (!data || !data.ok || !data.checkoutUrl) {
            alert("Kon betaling niet starten.");
            return;
          }

          // Show QR + link
          const modal = document.getElementById("pay-modal");
          const qrBox = document.getElementById("qr");
          qrBox.innerHTML = "";
          if (window.QRCode && window.QRCode.toCanvas) {
            window.QRCode.toCanvas(
              data.checkoutUrl,
              { width: 256 },
              (err, canvas) => {
                if (!err && canvas) qrBox.appendChild(canvas);
              }
            );
          }
          document.getElementById("open-checkout").href = data.checkoutUrl;
          modal.style.display = "block";

          // Poll for status; reload when paid
          let tries = 0;
          const t = setInterval(async () => {
            tries++;
            const r = await fetch(window.location.href, { cache: "no-store" });
            const html = await r.text();
            const re = new RegExp(
              'class="js-tab-status"[^>]*data-tab-id="' +
                tabId +
                '"[^>]*data-status="([^"]+)"',
              "i"
            );
            const m = html.match(re);
            const status = m ? (m[1] || "").toLowerCase() : null;
            const stillListed =
              html.indexOf('data-tab-id="' + tabId + '"') !== -1;

            if (
              status === "paid" ||
              (!stillListed && tries >= 2) ||
              tries > 200
            ) {
              clearInterval(t);
              modal.style.display = "none";
              location.reload();
            }
          }, 3000);
        }

        document.querySelectorAll("[data-online-pay]").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            e.preventDefault();
            startOnlinePay(btn.getAttribute("data-online-pay"));
          });
        });
      });
    </script>
  </body>
</html>
