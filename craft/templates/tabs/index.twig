    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"
      defer
    ></script>
    <script>
      // Expose addLine globally (optional helper if you want “quick add” buttons)
      const ADD_URL   = "{{ ADD_URL }}";
      const PAY_URL   = "{{ PAY_URL }}";
      const CLOSE_URL = "{{ CLOSE_URL }}";
      const CSRF_NAME = "{{ CSRF_NAME }}";
      const CSRF_VALUE= "{{ CSRF_VALUE|e('js') }}";

      async function addLine(drinkId, qty = 1, tabId = null) {
        const body = new URLSearchParams({ drinkId, qty });
        if (tabId) body.append('tabId', tabId);
        body.append(CSRF_NAME, CSRF_VALUE);

        const res = await fetch(ADD_URL, {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-CSRF-Token': CSRF_VALUE,
          },
          body,
        });
        let data; try { data = await res.json(); } catch(_){}
        if (!res.ok || !data?.success) {
          console.error('Add failed', res.status, data);
          alert('Toevoegen mislukt.');
          return;
        }
        location.reload();
      }

      document.addEventListener("DOMContentLoaded", () => {
        // If guest without a tabId in URL, try localStorage and redirect
        {% if not user and (not tabIdParam and not tabUidParam) %}
        try {
          const last = localStorage.getItem('guest_last_tab');
          if (last && !new URLSearchParams(location.search).get('tabId')) {
            const u = new URL(location.href);
            u.searchParams.set('tabId', last);
            location.replace(u.toString());
            return;
          }
        } catch (_) {}
        {% endif %}

        // Start online pay (works for guests & users)
        async function startOnlinePay(tabId) {
          const body = new URLSearchParams({ tabId });
          body.append(CSRF_NAME, CSRF_VALUE);

          const res = await fetch(PAY_URL, {
            method: "POST",
            headers: {
              "Accept": "application/json",
              "Content-Type": "application/x-www-form-urlencoded",
              "X-CSRF-Token": CSRF_VALUE,
            },
            body
          });

          let data; try { data = await res.json(); } catch (_) {}
          if (!res.ok || !data || !data.ok || !data.checkoutUrl) {
            alert("Kon betaling niet starten.");
            return;
          }

          // Show QR + link
          const modal = document.getElementById("pay-modal");
          const qrBox = document.getElementById("qr");
          qrBox.innerHTML = "";
          if (window.QRCode && window.QRCode.toCanvas) {
            window.QRCode.toCanvas(data.checkoutUrl, { width: 256 }, (err, canvas) => {
              if (!err && canvas) qrBox.appendChild(canvas);
            });
          }
          document.getElementById("open-checkout").href = data.checkoutUrl;
          modal.style.display = "block";

          // Poll for status; reload when paid
          let tries = 0;
          const t = setInterval(async () => {
            tries++;
            const r = await fetch(window.location.href, { cache: "no-store" });
            const html = await r.text();
            const re = new RegExp('class="js-tab-status"[^>]*data-tab-id="' + tabId + '"[^>]*data-status="([^"]+)"', "i");
            const m = html.match(re);
            const status = m ? (m[1] || "").toLowerCase() : null;
            const stillListed = html.indexOf('data-tab-id="' + tabId + '"') !== -1;

            if (status === "paid" || (!stillListed && tries >= 2) || tries > 200) {
              clearInterval(t);
              modal.style.display = "none";
              location.reload();
            }
          }, 3000);
        }

        // Bind online pay buttons
        document.querySelectorAll("[data-online-pay]").forEach((btn) => {
          btn.addEventListener("click", (e) => {
            e.preventDefault();
            startOnlinePay(btn.getAttribute("data-online-pay"));
          });
        });

        // Intercept Cash submits (logged-in only)
        document.querySelectorAll('form[action="{{ CLOSE_URL }}"]').forEach((f) => {
          f.addEventListener('submit', async (e) => {
            e.preventDefault();
            const btn = f.querySelector('button[type="submit"]');
            const tabId = f.querySelector('input[name="tabId"]')?.value;
            if (!tabId) return;

            if (btn) { btn.disabled = true; btn.textContent = 'Bezig…'; }

            const body = new URLSearchParams(new FormData(f)); // includes {{ csrfInput() }}
            let ok = false;
            try {
              const res = await fetch(CLOSE_URL, {
                method: 'POST',
                headers: {
                  'Accept': 'application/json',
                  'Content-Type': 'application/x-www-form-urlencoded',
                  'X-CSRF-Token': CSRF_VALUE,
                },
                body
              });
              ok = res.ok;
              try { const json = await res.json(); if (json && json.ok === false) ok = false; } catch(_){}
            } catch(_){}

            if (ok) {
              const row = document.querySelector(`tr[data-tab-id="${tabId}"]`);
              if (row) {
                const statusCell = row.querySelector('[data-label="Status"]');
                if (statusCell) {
                  statusCell.querySelector('.chip')?.remove();
                  const span = document.createElement('span');
                  span.className = 'chip chip-paid'; span.textContent = 'Betaald';
                  statusCell.prepend(span);
                  const marker = row.querySelector('.js-tab-status'); if (marker) marker.dataset.status = 'paid';
                }
                const actionsCell = row.querySelector('[data-label="Acties"]'); if (actionsCell) actionsCell.innerHTML = '—';
              }
              document.getElementById('cash-modal')?.style?.setProperty('display','block');
            } else {
              alert('Kon tab niet sluiten. Probeer opnieuw.');
              if (btn) { btn.disabled = false; btn.textContent = 'Cash'; }
            }
          });
        });

        // Guest cash info modal
        document.querySelectorAll('[data-guest-cash]').forEach((btn) => {
          btn.addEventListener('click', (e) => {
            e.preventDefault();
            document.getElementById('guest-cash-modal')?.style?.setProperty('display','block');
          });
        });
        document.getElementById('guest-cash-close')?.addEventListener('click', () => {
          document.getElementById('guest-cash-modal')?.style?.setProperty('display','none');
        });

        // Close logged-in cash success modal
        document.getElementById('cash-close')?.addEventListener('click', () => {
          document.getElementById('cash-modal')?.style?.setProperty('display','none');
        });
      });
    </script>
  </body>
</html>
