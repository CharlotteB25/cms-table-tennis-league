<style>
  :root {
    --cream: #fdfaf6; /* soft cream white */
    --soft-red: #d9534f; /* muted red */
    --soft-red-dark: #b52e2a;
    --text: #333;
  }

  nav {
    width: 200px;
    background: var(--cream);
    padding: 2rem 1rem;
    box-shadow: 2px 0 6px rgba(0, 0, 0, 0.08);
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
  }

  nav h2 {
    font-size: 18px;
    margin-bottom: 1.5rem;
    color: var(--soft-red-dark);
  }

  nav h2 a {
    text-decoration: none;
    color: var(--soft-red-dark);
  }

  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
  }

  nav ul li {
    margin-bottom: 1rem;
  }

  nav ul li a {
    text-decoration: none;
    color: var(--soft-red);
    font-weight: 600;
    padding: 0.4rem 0.6rem;
    border-radius: 6px;
    display: block;
    transition: background 0.2s, color 0.2s;
  }

  nav ul li a:hover {
    background: var(--soft-red);
    color: var(--cream);
  }

  /* Optional: highlight active link */
  nav ul li a.active {
    background: var(--soft-red-dark);
    color: var(--cream);
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>

<nav>
  <h2>
    <a href="{{ url('index') }}">
      <img src="{{ siteUrl('uploads/favicon/favicon.ico') }}" alt="Favicon" />
      HNO Menu
    </a>
  </h2>
  <ul>
    {% if currentUser %} {% if currentUser.admin %}
    <li><a href="{{ url('drinks/admin') }}">Beheer Drankjes</a></li>
    <li><a href="{{ url('teams/admin') }}">Beheer Planning</a></li>
    <li><a href="{{ url('tabs/admin') }}">Beheer Rekeningen</a></li>
    {% else %}
    <li><a href="{{ url('drinks') }}">Bestel Drankjes</a></li>
    <li><a href="{{ url('teams/admin') }}">Speeldata</a></li>
    <li><a href="{{ url('tabs') }}">Rekeningen</a></li>
    {% endif %}
    <li><a href="{{ url('logout') }}">Uitloggen</a></li>
    {% else %}
    <li><a href="{{ url('login') }}">Login</a></li>
    {% endif %}
  </ul>
</nav>
